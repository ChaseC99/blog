---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: '2-digit',
			month: '2-digit',
			day: '2-digit',
		})
	}
</time>

<style>
	time {
		font-family: monospace;
		font-size: 0.8em;
	}
</style>
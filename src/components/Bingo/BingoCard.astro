---
interface Props {
    item: string;
    completed: boolean;
    completedImage?: string;
    index?: number;
}

const { item, completed, completedImage, index } = Astro.props as Props;
--- 

<div
    class:list={["bingo-card", completed && "is-completed"]}
    data-index={index}
    data-completed-image={completedImage}
>
    <p>{item}</p>
</div>

<style>
    .bingo-card {
        border: 0.5px solid #000;
        box-sizing: border-box;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.3rem;
        overflow: hidden;
        position: relative;
        width: 100%;
        aspect-ratio: 1 / 1;
    }

    .bingo-card.is-completed {
        background: #4caf50;
        color: #fff;
    }

    .bingo-card p {
        margin: 0;
        text-align: center;
        font-size: clamp(8px, 1.8vmin, 20px);
        line-height: 1.1;
    }
</style>